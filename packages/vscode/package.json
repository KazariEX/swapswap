{
  "publisher": "KazariEX",
  "name": "swapswap",
  "displayName": "Swap Swap",
  "version": "0.0.2",
  "private": true,
  "description": "Signature refactoring tools for TypeScript",
  "author": "KazariEX",
  "license": "MIT",
  "repository": "KazariEX/swapswap",
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "./resources/logo.png",
  "files": [
    "LICENSE",
    "dist",
    "node_modules",
    "resources"
  ],
  "engines": {
    "vscode": "^1.99.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "swapswap.parameters.forward",
        "title": "Move Parameter Forward",
        "icon": "$(arrow-up)"
      },
      {
        "command": "swapswap.parameters.backward",
        "title": "Move Parameter Backward",
        "icon": "$(arrow-down)"
      },
      {
        "command": "swapswap.parameters.delete",
        "title": "Delete Parameter",
        "icon": "$(chrome-close)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "swapswap.parameters.forward",
          "when": "view == swapswap.parameters && viewItem != rest",
          "group": "inline@1"
        },
        {
          "command": "swapswap.parameters.backward",
          "when": "view == swapswap.parameters && viewItem != rest",
          "group": "inline@2"
        },
        {
          "command": "swapswap.parameters.delete",
          "when": "view == swapswap.parameters",
          "group": "inline@3"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "swapswap",
          "title": "Swap Swap",
          "icon": "./resources/logo.svg"
        }
      ]
    },
    "views": {
      "swapswap": [
        {
          "id": "swapswap.parameters",
          "name": "parameters",
          "icon": "./resources/logo.svg"
        }
      ]
    },
    "typescriptServerPlugins": [
      {
        "name": "swapswap-typescript-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "scripts": {
    "build": "tsdown --minify",
    "dev": "tsdown -w --sourcemap",
    "prepack": "pnpm run build",
    "pack": "zin vsce package --no-dependencies"
  },
  "devDependencies": {
    "@swapswap/typescript-plugin": "workspace:",
    "@types/vscode": "catalog:",
    "@vscode/vsce": "catalog:",
    "reactive-vscode": "catalog:",
    "typescript": "catalog:"
  }
}
